<fieldset>
    <legend>Novo Usuário</legend>
    <form method="POST" action="/novousuario">
        <input type="text" name="name" placeholder="Digite um nome" /><br/><br/>
        <input type="text" name="age" placeholder="Digite uma idade" /><br/><br/>
        <input type="submit" value="Inserir usuário" />
    </form>
</fieldset>

<hr/>
<h2>Usuários do banco</h2>

<ul>
    {{#users}}
        <li style="display: flex;"> 
            {{name}} - Idade: {{age}} ({{firstLetterOfName}})
            <form method="POST" action="/add-age/{{id}}"><input type="submit" value="+"/></form>
            <form method="POST" action="/remove-age/{{id}}"><input type="submit" value="-"/></form>
            <form method="POST" action="/delete/{{id}}"><input type="submit" value="Excluir"/></form>
        </li>
    {{/users}}
</ul>

